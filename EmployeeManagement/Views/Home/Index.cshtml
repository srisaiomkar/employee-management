@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<table>
    <thead>
        <tr>
            <th align="left">Name</th>
            <th align="left">Email</th>
            <th align="left">Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
            </tr>
        }
</table>
