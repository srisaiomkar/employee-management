@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
    var imagePath = "~/images/" + (Model.Employee.ImageName??"noimage.png");
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card m-3">
            <div class="card-header">
                <h4>@Model.Employee.Name</h4>
            </div>
            <img class="card-img-top" src="@imagePath" asp-append-version="true"/>

            <div class="card-body text-center">
                <div>
                    Id: @Model.Employee.Id
                </div>
                <div>
                    Email: @Model.Employee.Email
                </div>
                <div>
                    Department: @Model.Employee.Department
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Employee.Id"  class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>


