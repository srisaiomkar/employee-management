@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles List";
}

@if (Model.Any())
{
    <h3 class="mt-3 mb-3">Roles List </h3>
    <a asp-action="CreateRole" asp-controller="Administration"
       class="btn btn-primary mb-3">Create New Role</a>

    @foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
                <a asp-action="EditRole" asp-controller="Administration"
                   asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Create</a>
            </div>
        </div>
    }
}

else
{
    <div class="card">
        <div class="card-header">
            No Roles are created yet
        </div>
        <div class="card-body">
            Click here to create a new role
            <a asp-action="CreateRole" asp-controller="Administration"
               class="btn btn-primary">Create Role</a>
        </div>
    </div>
}