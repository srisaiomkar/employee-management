@model List<EditUsersInRoleViewModel>

@{ 
    ViewBag.Title = "Edit Users In Role";
    var roleId = ViewBag.RoleId;
}
<form method="post">

    <div class="card">
        <div class="card-header">Add or remove users to the role</div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsInRole" class="form-check-input" />
                <label asp-for="@Model[i].IsInRole" class="form-check-label">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="EditRole" asp-controller="administration" asp-route-id="@roleId"
               class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>